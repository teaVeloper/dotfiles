# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
# All Files
[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true


# max_line_length = 120

# 4 space indentation
[*.{py}]
indent_style = space
indent_size = 4
max_line_length = 120

[*.{yml,yaml,sh,zsh}]
indent_style = space
indent_size = 2
max_line_length = 120

# Markdown Files
[*.{md,mdx}]
trim_trailing_whitespace = false
max_line_length = 120

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
